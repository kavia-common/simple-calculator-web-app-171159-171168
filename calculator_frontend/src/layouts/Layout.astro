---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#2563EB" />
    <title>Ocean Calc</title>
  </head>
  <body>
    <ThemeToggle />
    <slot />
  </body>
</html>

<style>
  :root {
    /* Ocean Professional Light Theme */
    --bg-color: #f9fafb;
    --surface-color: #ffffff;
    --text-color: #111827;
    --text-secondary: #6b7280;
    --primary: #2563EB;
    --secondary: #F59E0B;
    --error: #EF4444;

    --border-color: rgba(17, 24, 39, 0.08);
    --card-bg: var(--surface-color);
    --card-hover-bg: rgba(255, 255, 255, 0.75);

    --shadow-sm: 0 1px 3px rgba(17,24,39,0.06);
    --shadow-md: 0 6px 20px rgba(17,24,39,0.08);
    --shadow-lg: 0 18px 40px rgba(37, 99, 235, 0.15);
  }

  body.dark-theme {
    /* Dark mode variants for optional ThemeToggle */
    --bg-color: #0f172a;
    --surface-color: #111827;
    --text-color: #f9fafb;
    --text-secondary: #cbd5e1;
    --border-color: rgba(255, 255, 255, 0.12);
    --card-bg: rgba(17, 24, 39, 0.8);
    --card-hover-bg: rgba(17, 24, 39, 0.6);
    --shadow-sm: 0 1px 3px rgba(0,0,0,0.35);
    --shadow-md: 0 10px 25px rgba(0,0,0,0.45);
    --shadow-lg: 0 18px 40px rgba(0,0,0,0.6);
  }

  html, body {
    margin: 0;
    width: 100%;
    min-height: 100%;
    background: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.3s ease, color 0.3s ease;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Inter,
      Noto Sans, Ubuntu, Cantarell, Helvetica Neue, Arial, "Apple Color Emoji",
      "Segoe UI Emoji";
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
